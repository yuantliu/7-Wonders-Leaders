<Window x:Class="SevenWonders.CourtesanUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Courtesan's Guild" Height="303" Width="229" Closing="Window_Closing">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Resources/Images/courtesan_bg.png" Opacity="0.15"/>
        </Grid.Background>
        <Image Height="193" HorizontalAlignment="Left" Margin="47,33,0,0" Name="leaderCardImage" Stretch="Fill" VerticalAlignment="Top" Width="125" />
        <Label Content="Copy a Leader" Height="27" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" Width="88" Margin="63,0,0,0" />
        <ComboBox Height="25" HorizontalAlignment="Left" Margin="12,232,0,0" Name="leaderComboBox" VerticalAlignment="Top" Width="125" SelectionChanged="leaderComboBox_SelectionChanged" />
        <Button Content="Copy" Height="25" HorizontalAlignment="Left" Margin="143,232,0,0" Name="copyButton" VerticalAlignment="Top" Width="38" IsEnabled="False" Click="copyButton_Click" />
    </Grid>
</Window>
